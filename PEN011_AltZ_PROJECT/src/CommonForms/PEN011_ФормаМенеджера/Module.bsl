#Область СлужебныеПроцедурыИФункции

&НаСервере
Процедура ОформитьГруппуНавигация()

	Если ИсследуемыйОбъект = Неопределено Тогда
		Элементы.ДекорацияИсследоватьОбъект.Видимость = Ложь;
		Элементы.ДекорацияДинамическийСписок.Видимость = Ложь;
	КонецЕсли;

КонецПроцедуры

&НаСервере
Функция ПолноеИмяОбъекта()

	ПолноеИмя = "";

	Если ИсследуемыйОбъект = Неопределено Тогда
		Возврат ПолноеИмя;
	КонецЕсли;

	ПолноеИмя = ИсследуемыйОбъект.Метаданные().ПолноеИмя();

	Возврат ПолноеИмя;
КонецФункции

&НаСервере
Процедура ЗаголовокФормы()

	Отбор = Новый Структура("Имя", "PEN011_AltZ");
	Расширения = РасширенияКонфигурации.Получить(Отбор);
	Если Расширения.Количество() > 0 Тогда
		Заголовок = Расширения.Получить(0).Синоним;
	Иначе
		Заголовок = "";
	КонецЕсли;
	
КонецПроцедуры

#КонецОбласти